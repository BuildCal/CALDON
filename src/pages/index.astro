---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const featuredProjects = await getCollection('projects', ({ data }) => data.featured && !data.draft);
---

<BaseLayout title="Property Development & Brokerage">
  <style>
    .hero {
      display: flex; flex-direction: column; align-items: center; justify-content: center;
      height: 100vh; padding: 0 20px; text-align: center;
    }
    .hero-content { max-width: 700px; }
    .hero-logo { max-width: 180px; height: auto; margin-bottom: 40px; }
    .hero-tagline {
      font-family: 'Cormorant Garamond', serif; font-weight: 300;
      font-size: 2rem; letter-spacing: 1px; margin-bottom: 20px; line-height: 1.4;
    }
    .hero-subtext { font-size: 1rem; color: var(--text-secondary); max-width: 520px; margin: 0 auto 30px; }
    .cta-button {
      display: inline-block; padding: 12px 36px; background-color: var(--accent);
      color: var(--background); text-decoration: none; font-size: 0.85rem;
      text-transform: uppercase; letter-spacing: 2px; transition: var(--transition);
    }
    .cta-button:hover { background-color: #333; }
    .scroll-indicator {
      position: absolute; bottom: 40px; left: 50%; transform: translateX(-50%);
      font-size: 11px; letter-spacing: 3px; text-transform: uppercase; color: var(--text-secondary);
    }
    .scroll-indicator::after {
      content: ''; display: block; width: 1px; height: 40px;
      background-color: var(--text-secondary); margin: 10px auto 0; opacity: 0.3;
    }
    
    section { padding: 120px 0; }
    section:nth-child(even) { background-color: var(--subtle-accent); }
    .section-title { font-family: 'Cormorant Garamond', serif; font-size: 2.4rem; font-weight: 300; margin-bottom: 60px; text-align: center; }
    .section-subtitle { font-size: 0.75rem; letter-spacing: 3px; text-transform: uppercase; margin-bottom: 15px; color: var(--text-secondary); text-align: center; }
    
    .activities-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 50px; max-width: 1000px; margin: 0 auto; }
    .activity-item { text-align: center; padding: 40px 20px; transition: var(--transition); position: relative; }
    .activity-item::before { content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 1px solid transparent; transition: var(--transition); }
    .activity-item:hover::before { border-color: var(--border); }
    .activity-item h3 { font-family: 'Cormorant Garamond', serif; font-size: 1.4rem; margin-bottom: 25px; }
    .activity-item p { font-size: 0.95rem; color: var(--text-secondary); line-height: 1.8; }
    
    .philosophy-content { max-width: 800px; margin: 0 auto; text-align: center; }
    .philosophy-quote { font-family: 'Cormorant Garamond', serif; font-size: 1.8rem; font-weight: 300; font-style: italic; line-height: 1.5; margin-bottom: 30px; }
    .philosophy-text { font-size: 0.95rem; line-height: 1.8; color: var(--text-secondary); margin-bottom: 20px; }
    
    .contact { text-align: center; }
    .contact-content { max-width: 600px; margin: 0 auto; }
    .contact-intro { font-size: 0.95rem; line-height: 1.8; color: var(--text-secondary); margin-bottom: 40px; }
    .contact-link {
      display: inline-block; font-family: 'Cormorant Garamond', serif; font-size: 1.5rem;
      color: var(--text-primary); text-decoration: none; padding: 12px 36px;
      border: 1px solid var(--border); transition: var(--transition);
    }
    .contact-link:hover { background-color: var(--accent); color: var(--background); border-color: var(--accent); }
    
    @media (max-width: 992px) { .activities-grid { grid-template-columns: 1fr; gap: 40px; } }
    @media (max-width: 768px) {
      .hero-tagline { font-size: 1.8rem; }
      section { padding: 80px 0; }
      .philosophy-quote { font-size: 1.6rem; }
    }
    @media (max-width: 576px) {
      .hero { height: 80vh; padding-top: 80px; }
      .hero-logo { max-width: 150px; margin-bottom: 30px; }
      .hero-tagline { font-size: 1.5rem; }
      .section-title { font-size: 1.8rem; margin-bottom: 40px; }
    }
  </style>

  <div class="hero">
    <div class="hero-content">
      <img src="/logo.png" alt="CALDON™ Logo" class="hero-logo">
      <p class="hero-tagline">Property Development & Brokerage</p>
      <p class="hero-subtext">Principal investment, strategic development, and end-to-end development services for qualified investors across New South Wales.</p>
      <a href="/projects" class="cta-button">View Projects</a>
    </div>
    <div class="scroll-indicator">Discover</div>
  </div>

  <section id="activities">
    <div class="container">
      <div class="section-subtitle">Principal Activities</div>
      <h2 class="section-title">Development & Investment</h2>
      <div class="activities-grid">
        <div class="activity-item">
          <h3>Property Acquisition</h3>
          <p>Strategic identification and acquisition of development sites and investment properties across NSW, with particular focus on the Mid North Coast region.</p>
        </div>
        <div class="activity-item">
          <h3>Development Projects</h3>
          <p>Internal development of residential and commercial properties, from single dwellings to multi-residential complexes.</p>
        </div>
        <div class="activity-item">
          <h3>Investment Holdings</h3>
          <p>Curated property investment portfolio spanning residential, commercial, and mixed-use assets.</p>
        </div>
      </div>
    </div>
  </section>

  <section id="philosophy">
    <div class="container">
      <div class="section-subtitle">Our Philosophy</div>
      <h2 class="section-title">Strategic Vision</h2>
      <div class="philosophy-content">
        <p class="philosophy-quote">"Discretion, precision, and strategic thinking drive exceptional property outcomes."</p>
        <p class="philosophy-text">CALDON™ operates as a private property development and investment company with deep roots in the NSW market. Our focus spans regional and metropolitan New South Wales.</p>
        <p class="philosophy-text">We maintain a reserved approach to business, working primarily with established real estate professionals, qualified investors, and strategic partners.</p>
      </div>
    </div>
  </section>

  <section id="contact" class="contact">
    <div class="container">
      <div class="section-subtitle">Get In Touch</div>
      <h2 class="section-title">Investor Enquiries</h2>
      <div class="contact-content">
        <p class="contact-intro">We work with qualified investors deploying capital into NSW property development. If you're seeking development exposure with professional management, we'd like to hear from you.</p>
        <a href="mailto:invest@caldon.com.au" class="contact-link">invest@caldon.com.au</a>
      </div>
    </div>
  </section>
</BaseLayout>
